<?xml version="1.0"?>
<launch>
	<arg name="uri" default="radio://0/80/2M" />
	<arg name="frame" default="/mocap" />

	<include file="$(find crazyflie_driver)/launch/crazyflie_server.launch">
	</include>

	<group ns="crazyflie">
		<node name="crazyflie_add"
			pkg="crazyflie_driver"
			type="crazyflie_add"
			output="screen"
			launch-prefix="$(find crazyflie_demo)/scripts/tmux_openinpane 4"
		>
			<param name="uri" value="$(arg uri)" />
      <param name="tf_prefix" value="/crazyflie" />
      <param name="enable_logging" value="True" />
      <param name="enable_logging_battery" value="False" />
      <param name="enable_logging_motors" value="False" />
      <param name="enable_logging_euler_angles" value="True" />
      <param name="enable_logging_kf_quaternion" value="False" />
      <param name="enable_logging_onboard_position" value="False" />
      <param name="enable_logging_imu" value="True" />
      <param name="enable_logging_magnetic_field" value="False" />
      <param name="enable_logging_packets" value="False" />
      <param name="enable_logging_pose" value="False" />
      <param name="enable_logging_pressure" value="False" />
      <param name="enable_logging_temperature" value="False" />
      <rosparam>
        genericLogTopics: ["sf6"]
        genericLogTopicFrequencies: [100]
        genericLogTopic_sf6_Variables: ["sensfusion6.qw", "sensfusion6.qx", "sensfusion6.qy", "sensfusion6.qz"]
    </rosparam>
		</node>
	</group>

	<node name="fake_pos"
				pkg="crazyflie_demo"
				type="publish_external_position_fake.py"
				launch-prefix="$(find crazyflie_demo)/scripts/tmux_openinpane 1"
	/>

	<!-- <node name="crazy_euler_angles" -->
				<!-- pkg="rqt_plot" -->
				<!-- type="rqt_plot" -->
				<!-- args=" -->
				<!-- /crazyflie/euler_angles/vector -->
				<!-- " -->
	<!-- /> -->

	<!-- <node name="acados_plot_quat" -->
				<!-- pkg="rqt_plot" -->
				<!-- type="rqt_plot" -->
				<!-- args=" -->
				<!-- /cf_estimator/state_estimate/quat -->
				<!-- /cf_estimator/state_estimate/pos -->
				<!-- " -->
	<!-- /> -->

	<node name="acados_plot_pos"
				pkg="rqt_plot"
				type="rqt_plot"
				args="/crazyflie/cmd_vel/linear/x
							/crazyflie/cmd_vel/linear/y
							/crazyflie/euler_angles/vector
				"
	/>

	<node name="acados_bag"
				pkg="rosbag"
				type="record"
				args="record -o crazyflie_predictor.bag
					/cf_mpc/openloop_traj
					/cf_estimator/state_estimate
					/crazyflie/cmd_vel
					/crazyflie/euler_angles"
				>
	</node>

	<node name="nmpc"
		pkg="crazyflie_controller"
		type="acados_mpc"
		output="screen"
		ns="crazyflie"
		launch-prefix="$(find crazyflie_demo)/scripts/tmux_openinpane 2"
	>
		<param name="ref_traj" value="$(find crazyflie_controller)/traj/smooth_step.txt"/>
	</node>

	<node name="estimator"
		pkg="crazyflie_controller"
		type="acados_estimator"
		output="screen" ns="crazyflie"
		launch-prefix="$(find crazyflie_demo)/scripts/tmux_openinpane 3"
	>
		<param name="delay" value='0.06'/>
	</node>

</launch>
